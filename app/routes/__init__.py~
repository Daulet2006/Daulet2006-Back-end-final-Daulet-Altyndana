# Импорт Blueprint из маршрутов
from .auth_routes import bp as auth_bp
from .product_routes import bp as product_bp
from .pet_routes import bp as pet_bp
from .appointment_routes import bp as appointment_bp
from .category_routes import bp as category_bp
from .vet_routes import bp as vet_bp
from .order_routes import bp as order_bp
from .chat_routes import bp as chat_bp
from .dashboard_routes import bp as dashboard_bp
from .role_routes import role_bp

def register_routes(app):
    """Регистрирует все маршруты приложения."""
    app.register_blueprint(auth_bp)
    app.register_blueprint(product_bp)
    app.register_blueprint(pet_bp)
    app.register_blueprint(appointment_bp)
    app.register_blueprint(category_bp)
    app.register_blueprint(vet_bp)
    app.register_blueprint(order_bp)
    app.register_blueprint(chat_bp)
    app.register_blueprint(dashboard_bp)
    app.register_blueprint(role_bp)